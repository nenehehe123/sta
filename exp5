import pytest

# Dummy DesktopApp class for testing (replace with real implementation)
class DesktopApp:
    @staticmethod
    def login(username, password):
        if username == "username" and password == "password":
            return True
        return False

    @staticmethod
    def create_user(username):
        return True

    @staticmethod
    def delete_user(username):
        return True


class DesktopAppTester:
    def test_login_valid_credentials(self):
        # Test login with valid credentials
        result = DesktopApp.login("username", "password")
        assert result is True, "Login failed with valid credentials"

    def test_login_invalid_credentials(self):
        # Test login with invalid credentials
        result = DesktopApp.login("invalid_username", "invalid_password")
        assert result is False, "Login succeeded with invalid credentials"

    def test_create_new_user(self):
        # Test creating a new user
        result = DesktopApp.create_user("new_user")
        assert result is True, "Failed to create a new user"

    def test_delete_user(self):
        # Test deleting an existing user
        result = DesktopApp.delete_user("existing_user")
        assert result is True, "Failed to delete an existing user"


# Run tests manually
if __name__ == "__main__":
    pytest.main()
